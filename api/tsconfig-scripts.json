{
  "compilerOptions": {
    "target": "es2019",
    "sourceMap": true,
    "noImplicitThis": false,
    "strict": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"]
}
