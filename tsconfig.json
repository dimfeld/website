{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}
