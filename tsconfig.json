{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "$lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
